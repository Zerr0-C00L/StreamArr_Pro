# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/streamarr?sslmode=disable

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Server Configuration
SERVER_PORT=8080
HOST=0.0.0.0

# API Keys
TMDB_API_KEY=your_tmdb_api_key_here
REALDEBRID_API_KEY=your_real_debrid_api_key_here
PREMIUMIZE_API_KEY=your_premiumize_api_key_here
MDBLIST_API_KEY=your_mdblist_api_key_here

# Service URLs
TORRENTIO_URL=https://torrentio.strem.fun
COMET_URL=https://comet.elfhosted.com
MEDIAFUSION_URL=https://mediafusion.elfhosted.com

# Playlist Configuration
TOTAL_PAGES=5
MIN_YEAR=1970
MIN_RUNTIME=30
LANGUAGE=en-US
SERIES_ORIGIN_COUNTRY=US
MOVIES_ORIGIN_COUNTRY=US
MAX_RESOLUTION=2160
MAX_FILE_SIZE=50000
AUTO_CACHE_INTERVAL_HOURS=6
USER_CREATE_PLAYLIST=true
INCLUDE_ADULT_VOD=false
ENABLE_QUALITY_VARIANTS=false
SHOW_FULL_STREAM_NAME=false

# Provider Configuration
USE_REALDEBRID=true
USE_PREMIUMIZE=false
STREAM_PROVIDERS=comet,mediafusion,torrentio
TORRENTIO_PROVIDERS=yts,eztv,rarbg,1337x,thepiratebay,kickasstorrents,torrentgalaxy,magnetdl
COMET_INDEXERS=bktorrent,thepiratebay,yts,eztv

# Proxy Settings
HTTP_PROXY=
USE_HTTP_PROXY=false

# HeadlessVidX Settings
HEADLESS_VIDX_ADDRESS=localhost:3202
HEADLESS_VIDX_MAX_THREADS=5

# Notification Settings (optional)
ENABLE_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Debug
DEBUG=false
